    <main>
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-container">
                <div class="hero-content">
                    <h1>Split Subscriptions, Save Together!</h1>
                    <p>Join or create shared rooms for your favorite services and lower your monthly bills.</p>
                    <button class="btn btn-primary btn-large">Get Started</button>
                </div>
                <div class="hero-illustration">
                    <div class="illustration-container">
                        <div class="users-group">
                            <div class="user-avatar" style="--delay: 0.1s">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="user-avatar" style="--delay: 0.2s">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="user-avatar" style="--delay: 0.3s">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="user-avatar" style="--delay: 0.4s">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="user-avatar" style="--delay: 0.5s">
                                <i class="fas fa-user"></i>
                            </div>
                        </div>
                        <div class="subscription-icon">
                            <i class="fas fa-tv"></i>
                        </div>
                        <div class="connecting-lines"></div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Popular Subscriptions Section -->
        <section class="subscriptions-section">
            <div class="section-container">
                <div class="section-header">
                    <h2>Popular Subscriptions</h2>
                    <p>Join existing rooms or create your own to share with others</p>
                    <div class="subscription-filters">
                        <button class="filter-btn active" data-filter="all">All</button>
                        <button class="filter-btn" data-filter="streaming">Streaming</button>
                        <button class="filter-btn" data-filter="music">Music</button>
                        <button class="filter-btn" data-filter="gaming">Gaming</button>
                        <button class="filter-btn" data-filter="productivity">Productivity</button>
                    </div>
                </div>
                
                <div class="subscription-cards">
                    <!-- Netflix Card -->
                    <div class="subscription-card" data-category="streaming">
                        <div class="card-badge almost-full">Almost Full</div>
                        <div class="card-header">
                            <div class="service-logo netflix">
                                <i class="fab fa-netflix"></i>
                            </div>
                            <h3>Netflix Premium</h3>
                        </div>
                        <div class="card-body">
                            <div class="plan-info">
                                <p class="plan-name">6-Person Ultra HD Plan</p>
                                <div class="price-info">
                                    <div class="total-price">
                                        <span class="label">Total</span>
                                        <span class="price">$19.99</span>
                                        <span class="period">/month</span>
                                    </div>
                                    <div class="per-person-price">
                                        <span class="label">You pay</span>
                                        <span class="price">$3.33</span>
                                        <span class="period">/month</span>
                                    </div>
                                </div>
                                <div class="capacity-meter">
                                    <div class="capacity-bar">
                                        <div class="capacity-fill" style="width: 85%"></div>
                                    </div>
                                    <div class="capacity-text">5/6 members</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-outline">Join Room</button>
                        </div>
                    </div>

                    <!-- Spotify Card -->
                    <div class="subscription-card" data-category="music">
                        <div class="card-badge available">Available</div>
                        <div class="card-header">
                            <div class="service-logo spotify">
                                <i class="fab fa-spotify"></i>
                            </div>
                            <h3>Spotify Family</h3>
                        </div>
                        <div class="card-body">
                            <div class="plan-info">
                                <p class="plan-name">6-Person Family Plan</p>
                                <div class="price-info">
                                    <div class="total-price">
                                        <span class="label">Total</span>
                                        <span class="price">$15.99</span>
                                        <span class="period">/month</span>
                                    </div>
                                    <div class="per-person-price">
                                        <span class="label">You pay</span>
                                        <span class="price">$2.67</span>
                                        <span class="period">/month</span>
                                    </div>
                                </div>
                                <div class="capacity-meter">
                                    <div class="capacity-bar">
                                        <div class="capacity-fill" style="width: 50%"></div>
                                    </div>
                                    <div class="capacity-text">3/6 members</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-outline">Join Room</button>
                        </div>
                    </div>

                    <!-- Disney+ Card -->
                    <div class="subscription-card" data-category="streaming">
                        <div class="card-badge available">Available</div>
                        <div class="card-header">
                            <div class="service-logo disney">
                                <i class="fab fa-disney-plus"></i>
                            </div>
                            <h3>Disney+ Bundle</h3>
                        </div>
                        <div class="card-body">
                            <div class="plan-info">
                                <p class="plan-name">4-Person Premium Bundle</p>
                                <div class="price-info">
                                    <div class="total-price">
                                        <span class="label">Total</span>
                                        <span class="price">$19.99</span>
                                        <span class="period">/month</span>
                                    </div>
                                    <div class="per-person-price">
                                        <span class="label">You pay</span>
                                        <span class="price">$5.00</span>
                                        <span class="period">/month</span>
                                    </div>
                                </div>
                                <div class="capacity-meter">
                                    <div class="capacity-bar">
                                        <div class="capacity-fill" style="width: 75%"></div>
                                    </div>
                                    <div class="capacity-text">3/4 members</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-outline">Join Room</button>
                        </div>
                    </div>

                    <!-- YouTube Premium Card -->
                    <div class="subscription-card" data-category="streaming">
                        <div class="card-badge available">Available</div>
                        <div class="card-header">
                            <div class="service-logo youtube">
                                <i class="fab fa-youtube"></i>
                            </div>
                            <h3>YouTube Premium</h3>
                        </div>
                        <div class="card-body">
                            <div class="plan-info">
                                <p class="plan-name">5-Person Family Plan</p>
                                <div class="price-info">
                                    <div class="total-price">
                                        <span class="label">Total</span>
                                        <span class="price">$17.99</span>
                                        <span class="period">/month</span>
                                    </div>
                                    <div class="per-person-price">
                                        <span class="label">You pay</span>
                                        <span class="price">$3.60</span>
                                        <span class="period">/month</span>
                                    </div>
                                </div>
                                <div class="capacity-meter">
                                    <div class="capacity-bar">
                                        <div class="capacity-fill" style="width: 40%"></div>
                                    </div>
                                    <div class="capacity-text">2/5 members</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-outline">Join Room</button>
                        </div>
                    </div>

                    <!-- Xbox Game Pass Card -->
                    <div class="subscription-card" data-category="gaming">
                        <div class="card-badge almost-full">Almost Full</div>
                        <div class="card-header">
                            <div class="service-logo xbox">
                                <i class="fab fa-xbox"></i>
                            </div>
                            <h3>Xbox Game Pass</h3>
                        </div>
                        <div class="card-body">
                            <div class="plan-info">
                                <p class="plan-name">4-Person Ultimate Plan</p>
                                <div class="price-info">
                                    <div class="total-price">
                                        <span class="label">Total</span>
                                        <span class="price">$16.99</span>
                                        <span class="period">/month</span>
                                    </div>
                                    <div class="per-person-price">
                                        <span class="label">You pay</span>
                                        <span class="price">$4.25</span>
                                        <span class="period">/month</span>
                                    </div>
                                </div>
                                <div class="capacity-meter">
                                    <div class="capacity-bar">
                                        <div class="capacity-fill" style="width: 75%"></div>
                                    </div>
                                    <div class="capacity-text">3/4 members</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-outline">Join Room</button>
                        </div>
                    </div>

                    <!-- Adobe Creative Cloud Card -->
                    <div class="subscription-card" data-category="productivity">
                        <div class="card-badge new">New</div>
                        <div class="card-header">
                            <div class="service-logo adobe">
                                <i class="fab fa-adobe"></i>
                            </div>
                            <h3>Adobe Creative Cloud</h3>
                        </div>
                        <div class="card-body">
                            <div class="plan-info">
                                <p class="plan-name">2-Person Complete Plan</p>
                                <div class="price-info">
                                    <div class="total-price">
                                        <span class="label">Total</span>
                                        <span class="price">$52.99</span>
                                        <span class="period">/month</span>
                                    </div>
                                    <div class="per-person-price">
                                        <span class="label">You pay</span>
                                        <span class="price">$26.50</span>
                                        <span class="period">/month</span>
                                    </div>
                                </div>
                                <div class="capacity-meter">
                                    <div class="capacity-bar">
                                        <div class="capacity-fill" style="width: 50%"></div>
                                    </div>
                                    <div class="capacity-text">1/2 members</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-outline">Join Room</button>
                        </div>
                    </div>
                </div>
                
                <div class="create-room-container">
                    <button class="btn btn-primary create-room-btn">
                        <i class="fas fa-plus-circle"></i> Create New Room
                    </button>
                </div>
            </div>
        </section>

        <!-- How It Works Section -->
        <section class="how-it-works-section">
            <div class="section-container">
                <div class="section-header">
                    <h2>How It Works</h2>
                    <p>Share subscriptions in 4 simple steps</p>
                </div>
                
                <div class="steps-container">
                    <div class="step-card">
                        <div class="step-number">1</div>
                        <div class="step-icon">
                            <i class="fas fa-search"></i>
                        </div>
                        <h3>Choose a Subscription</h3>
                        <p>Browse our catalog of available subscription services</p>
                    </div>
                    
                    <div class="step-card">
                        <div class="step-number">2</div>
                        <div class="step-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3>Join or Create a Room</h3>
                        <p>Enter an existing room or create your own to share</p>
                    </div>
                    
                    <div class="step-card">
                        <div class="step-number">3</div>
                        <div class="step-icon">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        <h3>Pay Your Share</h3>
                        <p>Only pay for your portion of the subscription</p>
                    </div>
                    
                    <div class="step-card">
                        <div class="step-number">4</div>
                        <div class="step-icon">
                            <i class="fas fa-tv"></i>
                        </div>
                        <h3>Enjoy Together</h3>
                        <p>Access your subscription with automatic renewals</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials Section -->
        <section class="testimonials-section">
            <div class="section-container">
                <div class="section-header">
                    <h2>What Our Users Say</h2>
                    <p>Join thousands of happy subscribers saving money every month</p>
                </div>
                
                <div class="testimonials-slider">
                    <div class="testimonial-card">
                        <div class="testimonial-rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
