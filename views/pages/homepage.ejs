    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/homepage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="main-header">
        <div class="header-container">
            <!-- Left section with hamburger menu -->
            <div class="left-section">
                <button class="mobile-menu-toggle" aria-label="Toggle navigation menu">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="sidebar-logo">
                    <i class="fas fa-split"></i>
                    <span>SubSplit</span>
                </div>
            </div>
            
            <!-- Center section with logo and navigation -->
            <div class="center-section">
               
                
                <!-- Desktop Navigation -->
                <nav class="desktop-nav">
                    <ul>
                        <li><a href="#" class="active">Home</a></li>
                        <li><a href="#">Subscriptions</a></li>
                        <li><a href="#">Rooms</a></li>
                        <li><a href="#">My Rooms</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </nav>
            </div>
            
            <!-- Right section with user actions -->
            <div class="right-section">
                <div class="user-actions">
                    <button class="notification-btn" aria-label="Notifications">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">2</span>
                    </button>
                    <button class="profile-btn" aria-label="User profile">
                        <div class="profile-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Mobile Navigation Sidebar -->
    <div class="mobile-nav-backdrop"></div>
    <nav class="mobile-nav">
        <div class="mobile-nav-header">
            <div class="mobile-profile">
                <div class="profile-avatar large">
                    <i class="fas fa-user"></i>
                </div>
                <div class="profile-info">
                    <h3>Hello, User</h3>
                    <p>Manage your account</p>
                </div>
            </div>
            <button class="close-mobile-nav" aria-label="Close navigation menu">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <ul class="mobile-nav-links">
            <li><a href="#" class="active"><i class="fas fa-home"></i>Home</a></li>
            <li><a href="#"><i class="fas fa-tv"></i>Subscriptions</a></li>
            <li><a href="#"><i class="fas fa-door-open"></i>Rooms</a></li>
            <li><a href="#"><i class="fas fa-users"></i>My Rooms</a></li>
