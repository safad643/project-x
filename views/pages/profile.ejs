<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <meta name="theme-color" content="#5461FF">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>SubSplit - Profile</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/homepage.css">
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Header -->
     <%- include("../partials/header")%>

    <!-- Mobile Navigation Sidebar -->
    
     <%- include("../partials/navbar")%>

    <main>
        <div class="profile-container">
            <!-- Profile Overview Section -->
            <section class="profile-overview-section">
                <div class="profile-header">
                    <div class="profile-photo-container">
                        <div class="profile-photo">
                            <img src="images/default-avatar.png" alt="Profile Picture" id="profile-image">
                            <div class="photo-upload-overlay">
                                <label for="photo-upload" class="upload-icon">
                                    <i class="fas fa-camera"></i>
                                </label>
                                <input type="file" id="photo-upload" accept="image/*" hidden>
                            </div>
                        </div>
                    </div>
                    <div class="profile-header-info">
                        <h2 class="profile-username">Alex Johnson</h2>
                        <p class="profile-email">alex.johnson@example.com</p>
                       
                    </div>
                </div>
            </section>

            <!-- Account Info Section -->
            <section class="account-info-section">
                <div class="card">
                    <div class="card-header">
                        <h3>Account Information</h3>
                        <button class="btn-icon btn-edit" data-target="account-info-form">
                            <i class="fas fa-pencil-alt"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="info-display" id="account-info-display">
                            <div class="info-row">
                                <span class="info-label">Full Name</span>
                                <span class="info-value">Alex Johnson</span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Email</span>
                                <span class="info-value">alex.johnson@example.com</span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Phone</span>
                                <span class="info-value">+1 (555) 123-4567</span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Password</span>
                                <span class="info-value">••••••••</span>
                            </div>
                        </div>
                        <form class="info-form hidden" id="account-info-form">
                            <div class="input-group">
                                <i class="fas fa-user"></i>
                                <input type="text" name="fullname" placeholder="Full Name" value="Alex Johnson">
                            </div>
                            <div class="input-group">
                                <i class="fas fa-envelope"></i>
                                <input type="email" name="email" placeholder="Email Address" value="alex.johnson@example.com">
                            </div>
                            <div class="input-group">
                                <i class="fas fa-phone"></i>
                                <input type="tel" name="phone" placeholder="Phone Number" value="+1 (555) 123-4567">
                            </div>
                            <div class="input-group">
                                <i class="fas fa-lock"></i>
                                <input type="password" name="current_password" placeholder="Current Password">
                            </div>
                            <div class="input-group">
                                <i class="fas fa-key"></i>
                                <input type="password" name="new_password" placeholder="New Password (leave blank to keep current)">
                            </div>
                            <div class="form-actions">
                                <button type="button" class="btn btn-outline btn-cancel" data-target="account-info-form">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>

            <!-- Subscription Summary Section -->
            <section class="subscription-summary-section">
                <div class="card">
                    <div class="card-header">
                        <h3>My Subscriptions</h3>
                        <a href="#" class="card-link">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="subscription-list">
                            <!-- Netflix Room -->
                            <div class="subscription-item">
                                <div class="subscription-logo netflix">
                                    <i class="fab fa-netflix"></i>
                                </div>
                                <div class="subscription-details">
                                    <h4>Netflix Premium</h4>
                                    <p class="subscription-plan">Ultra HD Plan</p>
                                    <div class="subscription-meta">
                                        <span class="subscription-role creator">Creator</span>
                                        <span class="subscription-cost">$3.33/month</span>
                                        <span class="subscription-status active">Active</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Spotify Room -->
                            <div class="subscription-item">
                                <div class="subscription-logo spotify">
                                    <i class="fab fa-spotify"></i>
                                </div>
                                <div class="subscription-details">
                                    <h4>Spotify Family</h4>
                                    <p class="subscription-plan">Family Plan</p>
                                    <div class="subscription-meta">
                                        <span class="subscription-role member">Member</span>
                                        <span class="subscription-cost">$2.50/month</span>
                                        <span class="subscription-status active">Active</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Payment Methods and Settings in a horizontal layout -->
            <section class="payment-methods-section">
                <div class="card">
                    <div class="card-header">
                        <h3>Payment Methods</h3>
                        <button class="btn-icon btn-add">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="payment-methods-list">
                            <!-- Credit Card -->
                            <div class="payment-method-item">
                                <div class="payment-method-icon credit-card">
                                    <i class="far fa-credit-card"></i>
                                </div>
                                <div class="payment-method-details">
                                    <h4>Credit Card</h4>
                                    <p>**** **** **** 4789</p>
                                    <p class="payment-method-expiry">Expires 05/25</p>
                                </div>
                                <div class="payment-method-actions">
                                    <span class="payment-method-default">Default</span>
                                    <button class="btn-icon">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- UPI -->
                            <div class="payment-method-item">
                                <div class="payment-method-icon upi">
                                    <i class="fas fa-money-bill-wave"></i>
                                </div>
                                <div class="payment-method-details">
                                    <h4>UPI</h4>
                                    <p>alex.johnson@upi</p>
                                </div>
                                <div class="payment-method-actions">
                                    <button class="btn btn-outline btn-sm">Set as Default</button>
                                    <button class="btn-icon">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Settings/Preferences Section -->
            <section class="settings-section">
                <div class="card">
                    <div class="card-header">
                        <h3>Preferences</h3>
                    </div>
                    <div class="card-body">
                        <div class="settings-list">
                            <!-- Notification Preferences -->
                            <div class="settings-item">
                                <div class="settings-info">
                                    <h4>Email Notifications</h4>
                                    <p>Receive email for updates, payments, and room activities</p>
                                </div>
                                <div class="settings-control">
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>

                            <!-- Payment Reminders -->
                            <div class="settings-item">
                                <div class="settings-info">
                                    <h4>Payment Reminders</h4>
                                    <p>Receive reminders before payment due dates</p>
                                </div>
                                <div class="settings-control">
                                    <label class="toggle-switch">
                                        <input type="checkbox" checked>
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>

                            <!-- Dark Mode -->
                            <div class="settings-item">
                                <div class="settings-info">
                                    <h4>Dark Mode</h4>
                                    <p>Switch between light and dark theme</p>
                                </div>
                                <div class="settings-control">
                                    <label class="toggle-switch" id="theme-toggle-switch">
                                        <input type="checkbox" id="theme-toggle-input">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                            </div>

                            <!-- Privacy -->
                            <div class="settings-item">
                                <div class="settings-info">
                                    <h4>Profile Privacy</h4>
                                    <p>Control who can see your profile information</p>
                                </div>
                                <div class="settings-control">
                                    <select class="settings-select">
                                        <option>Room Members Only</option>
                                        <option>Everyone</option>
                                        <option>Only Me</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Footer Section -->
    
     <%- include('../partials/footer')%>

    <!-- Subscription Details Modal -->
    <div class="subscription-modal-backdrop"></div>
    <div class="subscription-modal">
        <div class="modal-content">
            <!-- Header -->
            <div class="modal-header">
                <h2 class="modal-title">Netflix Premium</h2>
                <button class="modal-close-btn" aria-label="Close modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <!-- Body -->
            <div class="modal-body">
                <!-- Room Details Section -->
                <div class="modal-section">
                    <h3 class="section-title">Room Details</h3>
                    <div class="detail-row">
                        <span class="detail-label">Room Name:</span>
                        <span class="detail-value" id="room-name">Netflix Family</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Created By:</span>
                        <span class="detail-value" id="room-admin">Sarah Johnson</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Date Joined:</span>
                        <span class="detail-value" id="date-joined">June 15, 2023</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Total Members:</span>
                        <span class="detail-value" id="total-members">4 of 5</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Status:</span>
                        <div class="detail-value">
                            <span class="status-badge active" id="room-status">Active</span>
                        </div>
                    </div>
                </div>
                
                <!-- Payment Info Section -->
                <div class="modal-section">
                    <h3 class="section-title">Payment Information</h3>
                    <div class="detail-row">
                        <span class="detail-label">Your Share:</span>
                        <span class="detail-value" id="user-share">$3.33/month</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Last Payment:</span>
                        <span class="detail-value" id="last-payment">May 1, 2023</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Next Payment:</span>
                        <span class="detail-value" id="next-payment">June 1, 2023</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Payment Method:</span>
                        <span class="detail-value" id="payment-method">Credit Card (**** 4789)</span>
                    </div>
                </div>
                
                <!-- Members List Section -->
                <div class="modal-section">
                    <h3 class="section-title">Members</h3>
                    <div class="members-list">
                        <div class="member-item">
                            <div class="member-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="member-info">
                                <span class="member-name">Sarah Johnson</span>
                                <span class="member-badge creator">Creator</span>
                            </div>
                        </div>
                        <div class="member-item">
                            <div class="member-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="member-info">
                                <span class="member-name">Alex Johnson</span>
                                <span class="member-badge you">You</span>
                            </div>
                        </div>
                        <div class="member-item">
                            <div class="member-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="member-info">
                                <span class="member-name">Michael Smith</span>
                            </div>
                        </div>
                        <div class="member-item">
                            <div class="member-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="member-info">
                                <span class="member-name">Emma Wilson</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Footer/Actions -->
            <div class="modal-footer">
                <button class="btn btn-outline btn-contact-creator">Contact Admin</button>
            </div>
        </div>
    </div>

    <%- include('../partials/notification-modal') %>

    <script src="/js/script.js"></script>
    <script src="/js/profile.js"></script>
    <script src="/js/subscriptions.js"></script>
    <script src="/js/nav-sync.js"></script>
</body>
</html> 