<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <meta name="theme-color" content="#5461FF">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>SubSplit - Available Rooms</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/homepage.css">
    <link rel="stylesheet" href="/css/rooms.css">
    <link rel="stylesheet" href="/css/rooms-override.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Header -->

    <%- include("../partials/header")%>

    <!-- Mobile Navigation Sidebar -->
    
     <%- include("../partials/navbar")%>

    <main>
        <div class="rooms-container">
            <!-- Rooms Grid Section - Only showing open rooms -->
            <section class="rooms-grid-section">
                <!-- Netflix Room Card -->
                <div class="room-card" data-status="open">
                    <div class="room-logo netflix">
                        <i class="fab fa-netflix"></i>
                    </div>
                    <div class="room-info">
                        <h3>Netflix Premium</h3>
                        <p class="room-name">Netflix Family</p>
                        <div class="room-meta">
                            <div class="members-count">
                                <i class="fas fa-users"></i>
                                <span>3/4 members</span>
                            </div>
                            <div class="price-per-member">
                                <i class="fas fa-dollar-sign"></i>
                                <span>$3.75/month</span>
                            </div>
                        </div>
                        <div class="room-actions">
                            <button class="btn btn-outline join-btn">
                                Join Room
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Spotify Room Card -->
                <div class="room-card" data-status="open">
                    <div class="room-logo spotify">
                        <i class="fab fa-spotify"></i>
                    </div>
                    <div class="room-info">
                        <h3>Spotify Family</h3>
                        <p class="room-name">Music Lovers</p>
                        <div class="room-meta">
                            <div class="members-count">
                                <i class="fas fa-users"></i>
                                <span>4/6 members</span>
                            </div>
                            <div class="price-per-member">
                                <i class="fas fa-dollar-sign"></i>
                                <span>$2.50/month</span>
                            </div>
                        </div>
                        <div class="room-actions">
                            <button class="btn btn-outline join-btn">
                                Join Room
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Disney+ Room Card -->
                <div class="room-card" data-status="open">
                    <div class="room-logo disney">
                        <i class="fab fa-discord"></i> <!-- Using discord as placeholder for Disney+ -->
                    </div>
                    <div class="room-info">
                        <h3>Disney+ Premium</h3>
                        <p class="room-name">Disney Fans</p>
                        <div class="room-meta">
                            <div class="members-count">
                                <i class="fas fa-users"></i>
                                <span>2/4 members</span>
                            </div>
                            <div class="price-per-member">
                                <i class="fas fa-dollar-sign"></i>
                                <span>$2.25/month</span>
                            </div>
                        </div>
                        <div class="room-actions">
                            <button class="btn btn-outline join-btn">
                                Join Room
                            </button>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Create Room Button (now at bottom) -->
            <section class="create-room-section">
                <div class="create-room-container">
                    <button id="create-room-btn" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        Create Room
                    </button>
                </div>
            </section>

            <!-- Empty State Section (Initially Hidden) -->
            <section class="empty-state-section hidden" id="empty-state">
                <div class="empty-state-container">
                    <div class="empty-state-icon">
                        <i class="fas fa-door-closed"></i>
                    </div>
                    <h3>No rooms available right now</h3>
                    <p>Be the first to create one!</p>
                    <button id="empty-create-room-btn" class="btn btn-primary">Create Room</button>
                </div>
            </section>
        </div>
    </main>

    <!-- Footer Section -->

     <%- include('../partials/footer')%>

    <!-- Create Room Modal -->
    <div class="modal-backdrop" id="create-room-backdrop"></div>
    <div class="modal" id="create-room-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Create a New Room</h3>
                <button class="modal-close-btn" aria-label="Close modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="create-room-form" novalidate>
                    <div class="input-group">
                        <i class="fas fa-tv"></i>
                        <select id="subscription-type" name="subscription-type">
                            <option value="" selected disabled>Select Subscription Type</option>
                            <option value="netflix">Netflix</option>
                            <option value="spotify">Spotify</option>
                            <option value="disney">Disney+</option>
                            <option value="youtube">YouTube Premium</option>
                            <option value="amazon">Amazon Prime</option>
                            <option value="hbo">HBO Max</option>
                        </select>
                    </div>
                    <div class="input-group">
                        <i class="fas fa-users"></i>
                        <input type="number" id="max-members" name="max-members" min="2" max="10" placeholder="Maximum Members">
                    </div>
                    <div class="input-group">
                        <i class="fas fa-dollar-sign"></i>
                        <input type="number" id="price-per-member" name="price-per-member" min="0.01" step="0.01" placeholder="Price per Member ($/month)">
                    </div>
                    <div class="input-group">
                        <i class="fas fa-align-left"></i>
                        <textarea id="room-description" name="room-description" placeholder="Room Description (optional)" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline" id="cancel-room-btn">Cancel</button>
                <button class="btn btn-primary" id="submit-room-btn">Create Room</button>
            </div>
        </div>
    </div>

    <!-- Success Message Toast -->
    <div class="toast-container">
        <div class="toast success-toast" id="success-toast">
            <div class="toast-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="toast-content">
                <p>Room Created Successfully!</p>
            </div>
        </div>
    </div>

    <%- include('../partials/notification-modal') %>

    <script src="/js/script.js"></script>
    <script src="/js/rooms.js"></script>
    <script src="/js/nav-sync.js"></script>
</body>
</html> 