<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <meta name="theme-color" content="#5461FF">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>SubSplit - My Subscriptions</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/homepage.css">
    <link rel="stylesheet" href="/css/subscriptions.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Header -->
     <%- include("../partials/header")%>

    <!-- Mobile Navigation Sidebar -->
    
     <%- include("../partials/navbar")%>

    <main>
        <div class="subscriptions-container">
            <!-- Filter Section -->
            <section class="filter-section">
                <div class="filter-container">
                    <div class="filter-buttons">
                        <button class="filter-btn active" data-filter="all">All</button>
                        <button class="filter-btn" data-filter="active">Active</button>
                        <button class="filter-btn" data-filter="expired">Expired</button>
                    </div>
                </div>
            </section>

            <!-- Subscriptions Grid Section -->
            <section class="subscriptions-grid-section">
                <!-- Netflix Subscription Card -->
                <div class="subscription-card" data-status="active">
                    <div class="subscription-logo netflix">
                        <i class="fab fa-netflix"></i>
                    </div>
                    <div class="subscription-info">
                        <h3>Netflix Premium</h3>
                        <p class="room-name">Netflix Family</p>
                        <div class="subscription-meta">
                            <span class="subscription-amount">$3.33/month</span>
                            <span class="subscription-date">Joined: May 15, 2023</span>
                        </div>
                        <div class="subscription-status">
                            <span class="status-badge active">Active</span>
                        </div>
                    </div>
                </div>

                <!-- Spotify Subscription Card -->
                <div class="subscription-card" data-status="active">
                    <div class="subscription-logo spotify">
                        <i class="fab fa-spotify"></i>
                    </div>
                    <div class="subscription-info">
                        <h3>Spotify Family</h3>
                        <p class="room-name">Music Lovers</p>
                        <div class="subscription-meta">
                            <span class="subscription-amount">$2.50/month</span>
                            <span class="subscription-date">Joined: June 2, 2023</span>
                        </div>
                        <div class="subscription-status">
                            <span class="status-badge active">Active</span>
                        </div>
                    </div>
                </div>

                <!-- Disney+ Subscription Card -->
                <div class="subscription-card" data-status="active">
                    <div class="subscription-logo disney">
                        <i class="fab fa-discord"></i> <!-- Using discord as placeholder for Disney+ -->
                    </div>
                    <div class="subscription-info">
                        <h3>Disney+ Premium</h3>
                        <p class="room-name">Disney Fans</p>
                        <div class="subscription-meta">
                            <span class="subscription-amount">$2.25/month</span>
                            <span class="subscription-date">Joined: July 10, 2023</span>
                        </div>
                        <div class="subscription-status">
                            <span class="status-badge active">Active</span>
                        </div>
                    </div>
                </div>

                <!-- YouTube Premium Subscription Card -->
                <div class="subscription-card" data-status="active">
                    <div class="subscription-logo youtube">
                        <i class="fab fa-youtube"></i>
                    </div>
                    <div class="subscription-info">
                        <h3>YouTube Premium</h3>
                        <p class="room-name">No Ads Club</p>
                        <div class="subscription-meta">
                            <span class="subscription-amount">$2.99/month</span>
                            <span class="subscription-date">Joined: April 5, 2023</span>
                        </div>
                        <div class="subscription-status">
                            <span class="status-badge active">Active</span>
                        </div>
                    </div>
                </div>

                <!-- Amazon Prime Subscription Card -->
                <div class="subscription-card" data-status="expired">
                    <div class="subscription-logo amazon">
                        <i class="fab fa-amazon"></i>
                    </div>
                    <div class="subscription-info">
                        <h3>Amazon Prime</h3>
                        <p class="room-name">Prime Sharers</p>
                        <div class="subscription-meta">
                            <span class="subscription-amount">$3.75/month</span>
                            <span class="subscription-date">Joined: Jan 15, 2023</span>
                        </div>
                        <div class="subscription-status">
                            <span class="status-badge expired">Expired</span>
                        </div>
                    </div>
                </div>

                <!-- HBO Max Subscription Card -->
                <div class="subscription-card" data-status="expired">
                    <div class="subscription-logo hbo">
                        <i class="fas fa-film"></i> <!-- Using film as placeholder for HBO -->
                    </div>
                    <div class="subscription-info">
                        <h3>HBO Max</h3>
                        <p class="room-name">HBO Group</p>
                        <div class="subscription-meta">
                            <span class="subscription-amount">$4.20/month</span>
                            <span class="subscription-date">Joined: Feb 20, 2023</span>
                        </div>
                        <div class="subscription-status">
                            <span class="status-badge expired">Expired</span>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Empty State Section (Initially Hidden) -->
            <section class="empty-state-section hidden" id="empty-state">
                <div class="empty-state-container">
                    <div class="empty-state-icon">
                        <i class="fas fa-tv-slash"></i>
                    </div>
                    <h3>No subscriptions found</h3>
                    <p>You don't have any subscriptions in this category yet.</p>
                    <a href="#" class="btn btn-primary">Browse Subscriptions</a>
                </div>
            </section>
        </div>
    </main>

    <!-- Footer Section -->
    
     <%- include('../partials/footer')%>

    <!-- Subscription Details Modal -->
    <div class="subscription-modal-backdrop"></div>
    <div class="subscription-modal">
        <div class="modal-content">
            <!-- Header -->
            <div class="modal-header">
                <h2 class="modal-title">Netflix Premium</h2>
                <button class="modal-close-btn" aria-label="Close modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <!-- Body -->
            <div class="modal-body">
                <!-- Room Details Section -->
                <div class="modal-section">
                    <h3 class="section-title">Room Details</h3>
                    <div class="detail-row">
                        <span class="detail-label">Room Name:</span>
                        <span class="detail-value" id="room-name">Netflix Family</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Created By:</span>
                        <span class="detail-value" id="room-admin">Sarah Johnson</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Date Joined:</span>
                        <span class="detail-value" id="date-joined">June 15, 2023</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Total Members:</span>
                        <span class="detail-value" id="total-members">4 of 5</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Status:</span>
                        <div class="detail-value">
                            <span class="status-badge active" id="room-status">Active</span>
                        </div>
                    </div>
                </div>
                
                <!-- Payment Info Section -->
                <div class="modal-section">
                    <h3 class="section-title">Payment Information</h3>
                    <div class="detail-row">
                        <span class="detail-label">Your Share:</span>
                        <span class="detail-value" id="user-share">$3.33/month</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Last Payment:</span>
                        <span class="detail-value" id="last-payment">May 1, 2023</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Next Payment:</span>
                        <span class="detail-value" id="next-payment">June 1, 2023</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Payment Method:</span>
                        <span class="detail-value" id="payment-method">Credit Card (**** 4789)</span>
                    </div>
                </div>
                
                <!-- Members List Section -->
                <div class="modal-section">
                    <h3 class="section-title">Members</h3>
                    <div class="members-list">
                        <div class="member-item">
                            <div class="member-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="member-info">
                                <span class="member-name">Sarah Johnson</span>
                                <span class="member-badge creator">Creator</span>
                            </div>
                        </div>
                        <div class="member-item">
                            <div class="member-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="member-info">
                                <span class="member-name">Alex Johnson</span>
                                <span class="member-badge you">You</span>
                            </div>
                        </div>
                        <div class="member-item">
                            <div class="member-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="member-info">
                                <span class="member-name">Michael Smith</span>
                            </div>
                        </div>
                        <div class="member-item">
                            <div class="member-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="member-info">
                                <span class="member-name">Emma Wilson</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Footer/Actions -->
            <div class="modal-footer">
                <button class="btn btn-outline btn-contact-creator">Contact Admin</button>
            </div>
        </div>
    </div>

    <%- include('../partials/notification-modal') %>

    <script src="/js/script.js"></script>
    <script src="/js/subscriptions.js"></script>
    <script src="/js/nav-sync.js"></script>
</body>
</html> 